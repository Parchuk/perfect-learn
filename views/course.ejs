<!DOCTYPE html>
<html lang="en">
<%- include('layouts/head.ejs') %>
<body id="home" data-spy="scroll" data-target="#navbar-wd" data-offset="98">
<%- include('layouts/header.ejs') %>
<%- include('layouts/internal-banner.ejs') %> 
<div class="container course pb-4">
    <div class="row pt-4">
        <% course.forEach(item => { %>
        <div class="col-md-4 mt-4">
           <h2><%= item.title %></h2>
            <img src='<%= item.image %>' alt="<%= item.title %>">
            <p><%= item.preview %></p>
            <a href="/course/<%= item.id %>" class="btn btn-info">read more</a>
        </div>
        <%})%>  
    </div>
</div>
<%- include('layouts/footer.ejs') %>
</body>
</html>